# Example environment variables for mongo-crud-app
# Copy to .env and replace placeholder values before running

# MongoDB
MONGODB_URI=mongodb://localhost:27017/crud-demo
PORT=3001

# JWT
JWT_SECRET=your_jwt_secret_here

# Optional: ngrok
NGROK_AUTHTOKEN=your_ngrok_token_here

# AWS (for S3 uploads) - only required if using image uploads
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=ap-south-1
AWS_S3_BUCKET_NAME=your_bucket_name_here

# Email (for notifications)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_here
